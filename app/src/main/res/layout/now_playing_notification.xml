<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/image_song_thumb"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/music"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/text_song_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/image_song_thumb"
        android:text="Gham ka khazana"/>

    <LinearLayout
        android:id="@+id/layout_control_music"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_below="@id/text_song_name"
        android:layout_toRightOf="@id/image_song_thumb">

        <ImageView
            android:id="@+id/image_previous"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/previous"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/image_play_pause"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/play"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/image_next"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/next"
            tools:ignore="ContentDescription" />

    </LinearLayout>

</RelativeLayout>