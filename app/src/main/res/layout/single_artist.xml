<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/image_artist_thumb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/music"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/text_artist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/image_artist_thumb"
        android:layout_toRightOf="@id/image_artist_thumb"
        android:layout_alignTop="@id/image_artist_thumb"
        android:layout_marginTop="5dp"
        android:text="Jagjit Singh"/>

    <TextView
        android:id="@+id/text_num_albums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="20"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_below="@id/text_artist_name"
        android:layout_toEndOf="@id/image_artist_thumb"
        android:layout_toRightOf="@id/image_artist_thumb"
        android:layout_alignBottom="@id/image_artist_thumb"
        android:layout_marginBottom="5dp"
        android:text="10 |"/>

    <TextView
        android:id="@+id/text_num_tracks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="20"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_below="@id/text_artist_name"
        android:layout_toEndOf="@id/text_num_albums"
        android:layout_toRightOf="@id/text_num_albums"
        android:layout_alignBottom="@id/image_artist_thumb"
        android:layout_marginBottom="5dp"
        android:text="20"/>

</RelativeLayout>