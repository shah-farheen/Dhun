<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/image_song_thumb"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/music"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/text_song_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/image_song_thumb"
        android:layout_toRightOf="@id/image_song_thumb"
        android:layout_alignTop="@id/image_song_thumb"
        android:layout_marginTop="5dp"
        android:text="Gham Ka Khazana"/>

    <TextView
        android:id="@+id/text_song_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="20"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_below="@id/text_song_title"
        android:layout_toEndOf="@id/image_song_thumb"
        android:layout_toRightOf="@id/image_song_thumb"
        android:layout_alignBottom="@id/image_song_thumb"
        android:layout_marginBottom="5dp"
        android:text="Jagjit Singh |"/>

    <TextView
        android:id="@+id/text_song_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="20"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_below="@id/text_song_title"
        android:layout_toEndOf="@id/text_song_artist"
        android:layout_toRightOf="@id/text_song_artist"
        android:layout_alignBottom="@id/image_song_thumb"
        android:layout_marginBottom="5dp"
        android:text="Ghazals of Jagjit Singh"/>

</RelativeLayout>